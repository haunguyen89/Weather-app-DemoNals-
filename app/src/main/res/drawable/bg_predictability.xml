<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape>
            <corners android:radius="70dp" />
            <solid android:color="#504ed2"/>
            <stroke android:width="2dp" android:color="#504ed2"/>
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="70dp" />
            <gradient android:startColor="#504ed2" android:endColor="#504ed2" android:angle="270" android:type="linear"/>
            <stroke android:width="2dp" android:color="#ffedd5"/>
            <padding android:left="0dp" android:top="4dp" android:right="0dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>
